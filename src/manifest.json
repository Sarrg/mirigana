{
  "manifest_version": 2,
  "name": "mirigana",
  "version": "0.21",
  "default_locale": "en",

  "description": "__MSG_extension_description__",

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },

  "background": {
    "scripts": [
      "vendors/kuromoji.js",
      "constants.js",
      "background/rules/rule-month.js",
      "background/rules/rule-date.js",
      "background/rules/rule-counter.js",
      "background/rules/rule-purify.js",
      "background/token-rules.js",
      "background/background.js"
    ],
    "persistent": true
  },

  "page_action": {
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "64": "icons/64.png",
      "128": "icons/128.png"
    },
    "default_popup": "components/popup/popup.html"
  },

  "content_scripts": [{
    "matches": ["https://twitter.com/*"],
    "js": [
      "constants.js",
      "content_scripts/setting-store.js",
      "content_scripts/common.js",
      "content_scripts/twitter.js"
    ]
  }],

  "permissions": [
    "tabs",
    "storage"
  ]
}

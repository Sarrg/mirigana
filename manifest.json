{
  "manifest_version": 2,
  "name": "miri-furigana",
  "version": "0.1",
  "description": "Build an Extension!",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": ["https://twitter.com/*"],
    "js": ["content_scripts/twitter.js"]
  }],

  "permissions": [
    "declarativeContent",
    "webRequest",
    "https://twitter.com/i/timeline*"
  ]

}